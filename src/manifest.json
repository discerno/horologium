{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Horologium",
  "developer": {
    "name": "Stanislav Panin"
  },
  "description": "Manage time you spend on websites to enhance productivity.",
  "icons": {
    "48": "icons/horologium-48.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/horologium-32.png"
    },
    "default_popup": "popup.html"
  }
}
